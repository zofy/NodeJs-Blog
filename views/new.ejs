<% include ./partials/header %>
<div class='ui main text container text segment'>
    <div class="ui huge header">New blog</div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input name="blog[title]" placeholder="name of the post" type='text'></input>
        </div>
        <div class="field">
            <label>Image</label>
            <input name='blog[image]' placeholder="url of image" type="url"></input>
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name='blog[content]' placeholder="content of the new post..."></textarea>
        </div>
        <button class="ui violet basic button" type="submit" value="Save"></button>
    </form>
</div>
<% include ./partials/footer %>